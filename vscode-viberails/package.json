{
  "name": "vscode-viberails",
  "displayName": "VibeRails",
  "description": "Launch and control VibeRails dashboard inside VS Code",
  "version": "0.1.0",
  "publisher": "viberails",
  "icon": "media/vs-logo.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/robstokes857/vibe-rails.git"
  },
  "bugs": {
    "url": "https://github.com/robstokes857/vibe-rails/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "viberails.open",
        "title": "VibeRails: Open Dashboard",
        "icon": {
          "light": "media/icon.svg",
          "dark": "media/icon.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "viberails.open",
          "group": "navigation",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "VibeRails",
      "properties": {
        "viberails.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to the VibeRails executable. If empty, the extension will look for it in common locations."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "prepare-binaries": "pwsh -ExecutionPolicy Bypass -File ./scripts/prepare-binaries.ps1",
    "package": "npm run prepare-binaries && npm run package:all",
    "package:all": "pwsh -ExecutionPolicy Bypass -File ./scripts/package-platforms.ps1",
    "package:win32-x64": "vsce package --target win32-x64 -o dist/",
    "package:linux-x64": "vsce package --target linux-x64 -o dist/"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.9.3"
  }
}
