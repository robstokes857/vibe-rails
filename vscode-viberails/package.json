{
  "name": "vscode-viberails",
  "displayName": "VibeRails",
  "description": "Launch and control VibeRails dashboard inside VS Code",
  "version": "1.4.1",
  "publisher": "viberails",
  "icon": "media/vs-logo.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/robstokes857/vibe-rails.git",
    "directory": "vscode-viberails"
  },
  "bugs": {
    "url": "https://github.com/robstokes857/vibe-rails/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "viberails.open",
        "title": "VibeRails: Open Dashboard",
        "icon": {
          "light": "media/vs-logo.png",
          "dark": "media/vs-logo.png"
        }
      },
      {
        "command": "viberails.stop",
        "title": "VibeRails: Stop Dashboard"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "viberails.open",
          "group": "navigation",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "prepare-binaries": "pwsh -ExecutionPolicy Bypass -File ../deploy/prepare-binaries.ps1",
    "package": "npm run package:all",
    "package:all": "pwsh -ExecutionPolicy Bypass -File ../deploy/package-platforms.ps1",
    "package:win32-x64": "npx vsce package --target win32-x64 -o dist/",
    "package:linux-x64": "npx vsce package --target linux-x64 -o dist/",
    "release": "pwsh -ExecutionPolicy Bypass -File ../deploy/buildAndDeployVSCodeExt.ps1",
    "marketplace:test": "pwsh -ExecutionPolicy Bypass -File ../deploy/test-vscode-marketplace.ps1",
    "marketplace:publish-only": "pwsh -ExecutionPolicy Bypass -File ../deploy/test-vscode-marketplace.ps1 -Publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.9.3"
  }
}
