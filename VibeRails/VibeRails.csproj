<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <InvariantGlobalization>true</InvariantGlobalization>
    <PublishAot>true</PublishAot>
    <AssemblyName>vb</AssemblyName>
    <RootNamespace>VibeRails</RootNamespace>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="10.0.2" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="10.0.2" />
    <PackageReference Include="SQLitePCLRaw.bundle_e_sqlite3" Version="3.0.2" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.23.0" />
    <PackageReference Include="ModelContextProtocol" Version="0.5.0-preview.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PtyNet\src\Pty.Net\Pty.Net.csproj" />
  </ItemGroup>

  <!-- Copy wwwroot to output directory -->
  <ItemGroup>
    <Content Update="wwwroot\**" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Certs\" />
    <Folder Include="wwwroot\assets\" />
  </ItemGroup>

  <!-- Copy app_config.json to output directory -->
  <ItemGroup>
    <Content Update="app_config.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- Copy install scripts to output directory for update functionality -->
  <ItemGroup>
    <Content Include="..\deploy\install.ps1" Link="install.ps1" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="..\deploy\install.sh" Link="install.sh" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
